<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Customer" table="customer" catalog="db8905135 " optimistic-lock="version">
        <id name="customer_id" type="java.lang.Integer">
            <column name="customer_id" length="10" not-null="false"/>
        </id>
        <property name="customer_name" type="java.lang.String">
            <column name="customer_name" length="30" not-null="true"/>
        </property>
        <property name="street" type="java.lang.String">
            <column name="street" length="30" not-null="true"/>
        </property>
        <property name="zip_code" type="java.lang.Integer">
            <column name="zip_code" length="30" not-null="true"/>
        </property>
        <property name="city" type="java.lang.String">
            <column name="city" length="30" not-null="true"/>
        </property>
        <property name="date_of_birth" type="date">
            <column name="date_of_birth" length="30" not-null="true"/>
        </property>
        <property name="service_pin" type="java.lang.Integer">
            <column name="service_pin" length="30" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>